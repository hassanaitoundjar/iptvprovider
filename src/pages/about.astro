---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About IPTV Smarters Pro - Best IPTV Service Provider 2024',
  description:
    'Learn about IPTV Smarters Pro - your destination for cutting-edge IPTV solutions. 50K+ channels, 10k+ satisfied clients, premium streaming service. Experience unmatched entertainment with IPTV Smarters.',
  keywords: [
    'iptv provider',
    'iptv service provider',
    'best iptv provider',
    'iptv company',
    'iptv business',
    'iptv about us',
    'iptv service company',
    'reliable iptv provider',
    'trusted iptv provider',
    'premium iptv provider',
    'iptv provider reviews',
    'iptv service quality',
    'iptv customer service',
    'iptv support team',
    'iptv company info',
    'iptv provider details',
    'iptv service features',
    'iptv provider benefits',
    'best iptv service provider 2024',
    'top iptv provider',
    'iptv provider comparison',
    'iptv service reliability',
  ],
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    title: 'About IPTV Smarters Pro - Premium IPTV Service',
    description:
      'Experience unmatched entertainment with IPTV Smarters Pro. 50K+ channels, premium streaming, and dedicated customer support.',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'IPTV smarters multiple devices',
    }}
  >
    <Fragment slot="title">
      Experience Unmatched Entertainment: <br />
      <span class="text-accent dark:text-white">Join IPTV Smarters Today!</span>
    </Fragment>

    <Fragment slot="subtitle">
      Welcome to IPTV Smarters, your destination for cutting-edge IPTV solutions. We're dedicated to revolutionizing
      your entertainment experience with top-quality streaming services and unparalleled convenience.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about us"
    stats={[
      { title: 'Channels', amount: '50K+' },
      { title: 'Satisfied Clients', amount: '10k+' },
      { title: 'Positive Feedbacks', amount: '1k+' },
      { title: 'Freebies Released', amount: '100%' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Mission"
    subtitle="At IPTV Smarters, our mission is to provide you with the ultimate IPTV experience. We're committed to delivering seamless streaming, a user-friendly interface, and a vast selection of content to suit every preference."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Unrivaled Performance',
        description:
          'Morbi faucibus luctus quam, sit amet aliquet felis tempor id. Cras augue massa, ornare quis dignissim a, molestie vel nulla.',
        icon: 'tabler:bolt',
      },
      {
        title: 'User-Friendly Interface',
        description:
          'Navigate our intuitive interface with ease, designed to enhance your viewing experience and make discovering new content a breeze.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Secure and Reliable',
        description:
          'Your security and privacy are our top priorities. We employ advanced encryption and security protocols to safeguard your data at all times.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Extensive Content Library',
        description:
          'Gain access to a vast selection of channels, including live TV, sports, movies, and more. With IPTV Smarters, theres always something new to discover and enjoy.',
        icon: 'tabler:library',
      },
      {
        title: 'Dedicated Customer Support',
        description:
          'Have questions or need assistance? Our dedicated customer support team is available around the clock to provide you with prompt and helpful assistance.',
        icon: 'tabler:headset',
      },
      {
        title: 'Multi-Device Compatibility',
        description:
          'Experience crystal-clear HD streaming with IPTV Smarters Pro. Whether you are watching live TV, movies, or on-demand content, enjoy unparalleled picture quality for an immersive viewing experience.',
        icon: 'tabler:devices',
      },
      {
        title: 'Compatibility',
        description: 'We support MAG, Android, PC, iOS, Enigma2, Roku, Kodi and Smart-TV.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'POWERFUL SERVERS',
        description: 'Our 20 Gigabits Servers are located to provide the best connectivity.',
        icon: 'tabler:server',
      },
      {
        title: 'PREMIUM IPTV SOLUTION',
        description: 'IPTV Smarters Pro, reliable and stable IPTV streaming services in All the world.',
        icon: 'tabler:world',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technical Support"
    columns={2}
    items={[
      {
        title: 'Chat with us',
        description:
          'You ask, we answer! Our customer support team is available 24/7 to provide you with prompt and helpful assistance.',
        icon: 'tabler:messages',
      },
      {
        title: 'Call us',
        description: 'Call us anytime, and we will be happy to assist you with any questions or concerns you may have.',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
