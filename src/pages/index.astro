---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Prices from '~/components/widgets/Pricing.astro';
import paymentLinks from '~/config/pricing';

const metadata = {
  title: 'IPTV Smarters Pro: Elevate Your Entertainment Experience',
  description:
    'ðŸ”¥ Discover the ultimate way to stream your favorite shows and movies with IPTV Smarters Pro. Enjoy seamless entertainment anytime, anywhere. Try now!',
  ignoreTitleTemplate: true,
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    title: 'IPTV Smarters Pro: Elevate Your Entertainment Experience',
    description:
      'ðŸ”¥ Discover the ultimate way to stream your favorite shows and movies with IPTV Smarters Pro. Enjoy seamless entertainment anytime, anywhere. Try now!',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- Structured Data for SEO -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'IPTV Smarters Pro',
      url: 'https://iptvsmartproviders.com',
      logo: 'https://iptvsmartproviders.com/assets/images/logo.jpeg',
      description: 'IPTV Smarters Pro - Best IPTV service with 15,000+ live TV channels and 50,000+ movies & TV shows',
      sameAs: ['https://iptvsmartproviders.com'],
      contactPoint: {
        '@type': 'ContactPoint',
        telephone: '+212628096812',
        contactType: 'customer service',
        email: 'contact@iptvsmartproviders.com',
        availableLanguage: 'English',
      },
    })}
  />
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Service',
      serviceType: 'IPTV Streaming Service',
      provider: {
        '@type': 'Organization',
        name: 'IPTV Smarters Pro',
      },
      areaServed: 'Worldwide',
      description: 'Premium IPTV streaming service with 15,000+ live TV channels, 50,000+ movies and TV shows',
      offers: {
        '@type': 'Offer',
        priceCurrency: 'USD',
        price: '20',
        priceValidUntil: '2025-12-31',
        availability: 'https://schema.org/InStock',
      },
    })}
  />
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Subscribe',
        href: '/pricing',
        icon: 'tabler:arrow-right',
      },
      {
        variant: 'secondary',
        text: 'Download',
        href: '#',
        icon: 'tabler:download',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'IPTV Smarters Pro - Watch Your Favorites Anywhere' }}
  >
    <Fragment slot="title">
      Elevate Your Entertainment Experience with IPTV Smarters Pro
      <span class="text-accent dark:text-white">watch Your Favorites Anywhere</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Discover the ultimate experience with Smarters Pro. Watch your favorite shows, movies, and live TV channels
        on-the-go. Seamless streaming, user-friendly interface, and endless content options. Try IPTV Smarters Pro
        today!</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Note:" description="A Smarter & Sharper Addition to your Apps" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="WHAT IS IPTV SMARTERS?"
    subtitle="The IPTV Smarters app is an exceptional video streaming player that enables your IPTV customers or end users to access and enjoy content such as Live TV, VOD, Series, and Catch-up TV, all provided by you. It is compatible with Android and iOS devices. Smart TVs.."
    items={[
      {
        title: 'Multi-Device Compatibility',
        description:
          'A seamless integration between two great frameworks that offer high productivity, performance and versatility.Experience crystal-clear HD streaming with IPTV Smarters Pro. Whether you are watching live TV, movies, or on-demand content, enjoy unparalleled picture quality for an immersive viewing experience.',
        icon: 'tabler:device-tablet',
      },
      {
        title: 'User-Friendly Interface',
        description:
          'Navigate through your favorite channels and content effortlessly with IPTV Smarters Pro s intuitive and user-friendly interface. Easily discover new shows, customize your playlists, and access advanced features with just a few clicks.',
        icon: 'tabler:check',
      },
      {
        title: 'HD, 4K Streaming',
        description:
          'Experience crystal-clear HD streaming with IPTV Smarters Pro. Whether you are watching live TV, movies, or on-demand content, enjoy unparalleled picture quality for an immersive viewing experience.',
        icon: 'tabler:device-tv',
      },
      {
        title: 'Extensive Content Library',
        description:
          'Access a vast library of entertainment with IPTV Smarters Pro. From live TV channels to on-demand movies and series, discover endless content options to suit every taste and preference.',
        icon: 'tabler:library',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Welcome to IPTV Smarters"
    title="Your go-to destination for hassle-free entertainment"
    items={[
      {
        title: 'Simplify Your Experience',
        description:
          'Navigate with ease and access a world of entertainment at your fingertips. Say goodbye to complexity and hello to simplicity.',
      },
      {
        title: 'Endless Options',
        description:
          'Explore a wide selection of channels, including live TV, sports, and more. There is something for everyone.',
      },
      {
        title: 'Start Today',
        description:
          'Join IPTV Smarters and start enjoying entertainment made easy. <a href="https://iptvsmartproviders.com" class="text-primary dark:text-primary hover:text-primary/80 font-bold" target="_blank">Subscribe Now!</a>',
      },
    ]}
    image={{
      src: '~/assets/images/iptv-smart.png',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        With our cutting-edge IPTV solution,
      </h3>
      accessing your favorite content has never been easier or more enjoyable. Whether you're a sports fanatic, a movie buff,
      or a TV show enthusiast, we've got you covered.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Enjoy Secure Streaming',
        description: `Your gateway to effortless entertainment. Stream securely, explore freely.`,
      },
      {
        title: 'Stream Smarters',
        description: 'Simplify your entertainment with IPTV Smarters. Secure streaming, endless choices.',
      },
      {
        title: 'Discover Ease',
        description:
          "Navigate easily, stream securely. <a href='https://iptvsmartproviders.com' class=' text-primary dark:text-primary hover:text-primary/80 font-bold' target='_blank'>Join IPTV Smarters today.</a>",
      },
    ]}
    image={{
      src: '~/assets/images/iptv-smarter.png',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Simplify your entertainment with IPTV Smarters. Sign up today!</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <!-- Steps Widget ****************** -->

  <Steps
    title="Simplify Your Experience: Easy Steps to Get Started"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Subscribe to Our Service</span>',
        description: 'Subscribe now and gain access to a world of entertainment.',
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Download Our App</span>',
        description: 'Download our app for seamless access to your favorite content.',
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Enter Your Activation Codes</span>',
        description: 'Enter your activation codes (Xtream codes api) and start enjoying our services.',
        icon: 'tabler:paint',
      },
      {
        title: 'Get Ready to Enjoy`!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/phone-iptv-smarters.png',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Prices
    title="Iptv Smarters Pro Pricing Plans"
    subtitle="One time payment"
    prices={[
      {
        title: '3 Months',
        subtitle: 'Best selling - 55% Off',
        price: paymentLinks.threeMonthsPrice,
        period: 'one time payment',
        items: [
          {
            description: '15.000+ Live TV Channels',
          },
          {
            description: '50,000+ Movies & TV Shows',
          },
          {
            description: 'Premium Live TV Channels',
          },
          {
            description: 'TV Guide (EPG)',
          },
          {
            description: 'Support All Devices',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Pay Now',
          href: paymentLinks.threeMonths,
        },
        hasRibbon: true,
        ribbonTitle: 'POPULAR',
      },
      {
        title: '6 Months',
        subtitle: 'Best selling - 50% Off',
        price: paymentLinks.sixMonthsPrice,
        period: 'one time payment',
        items: [
          {
            description: '15.000+ Live TV Channels',
          },
          {
            description: '50,000+ Movies & TV Shows',
          },
          {
            description: 'Premium Live TV Channels',
          },
          {
            description: 'TV Guide (EPG)',
          },
          {
            description: 'Support All Devices',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Pay Now',
          href: paymentLinks.sixMonths,
        },
      },
      {
        title: '1 Month',
        subtitle: 'Best selling - 50% Off',
        price: paymentLinks.monthPrice,
        period: 'one time payment',
        items: [
          {
            description: '15.000+ Live TV Channels',
          },
          {
            description: '50,000+ Movies & TV Shows',
          },
          {
            description: 'Premium Live TV Channels',
          },
          {
            description: 'TV Guide (EPG)',
          },
          {
            description: 'Support All Devices',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Pay Now',
          href: paymentLinks.monthly,
        },
      },
    ]}
  />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Latest IPTV Guides & Channel Updates"
    information={`Stay updated with the latest news, channel additions, and helpful guides about IPTV Smarters Pro. Learn how to make the most of your subscription and discover new features.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions for IPTV SMARTERS PRO"
    subtitle=" IPTV Smarters Pro is a popular IPTV player that pairs with any IPTV service for an improved streaming experience."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What do I need to start?',
        description:
          'Subscibe up for iptv smarter pro above. After that, you will get information about username, password and url so you can log in to the smarter iptv app. Once you download the app and log into the app, you can start viewing channels.',
      },
      {
        title: 'How can I install IPTV Smarters Pro on my devices?',
        description:
          'Learn the simple steps to download and install IPTV Smarters Pro on your Android, iOS, Smart TV, macOS, or Windows devices.',
      },
      {
        title: "What's something you may find puzzling about IPTV Smarters Pro?",
        description:
          'Explore FAQs to unravel any mysteries and optimize your IPTV Smarters Pro experience for seamless streaming.',
      },
      {
        title: 'On which devices is it possible to install IPTV Smarters Pro?',
        description:
          'This app is compatible with all devices running the Android operating system, which encompasses the Amazon Firestick, Fire TV, and various other Android devices.',
      },
      {
        title: 'Is IPTV Smarters Pro Safe?',
        description:
          'Yes, you can confidently install and utilize this application on any Fire TV or Android device without any concerns regarding safety.',
      },
      {
        title: 'Is IPTV Smarters app Legal?',
        description: 'Absolutly Yes. This app is 100% legal to install and use.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'CHANNELS/VODS', amount: '50K+' },
      { title: 'SATISFIED CLIENTS', amount: '15K+' },
      { title: 'POSITIVE FEEDBACKS', amount: '1K+' },
      { title: 'FREEBIES RELEASED', amount: '100%' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Subscribe Now',
        href: '/pricing',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title"> Experience Unlimited Entertainment with IPTV Smarters Pro </Fragment>

    <Fragment slot="subtitle">
      Unlock a world of entertainment with IPTV Smarters Pro. Stream your favorite channels, movies, and shows on any
