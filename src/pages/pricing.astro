---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import paymentLinks from '~/config/pricing';

const metadata = {
  title: 'IPTV Smarters Pro Pricing Plans - Best IPTV Service Prices 2024',
  description:
    'Choose the perfect IPTV Smarters Pro pricing plan. One-time payment options: $20/month, $30/3 months, $40/6 months. Access 15,000+ channels, 50,000+ movies & TV shows. Best selling plans with up to 55% off.',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    title: 'IPTV Smarters Pro Pricing Plans - Best IPTV Service 2024',
    description:
      'Affordable IPTV Smarters Pro pricing plans. One-time payment, no recurring fees. Access thousands of channels and on-demand content.',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Stellar Pricing for Every Journey"
    subtitle="Choose the perfect plan that aligns with your cosmic goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Iptv Smarters Pro Pricing Plans"
    subtitle="One time payment"
    prices={[
      {
        title: '3 Months',
        subtitle: 'Best selling - 55% Off',
        price: paymentLinks.threeMonthsPrice,
        period: 'one time payment',
        items: [
          {
            description: '15.000+ Live TV Channels',
          },
          {
            description: '50,000+ Movies & TV Shows',
          },
          {
            description: 'Premium Live TV Channels',
          },
          {
            description: 'TV Guide (EPG)',
          },
          {
            description: 'Support All Devices',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Pay Now',
          href: paymentLinks.threeMonths,
        },
        hasRibbon: true,
        ribbonTitle: 'POPULAR',
      },
      {
        title: '6 Months',
        subtitle: 'Best selling - 50% Off',
        price: paymentLinks.sixMonthsPrice,
        period: 'one time payment',
        items: [
          {
            description: '15.000+ Live TV Channels',
          },
          {
            description: '50,000+ Movies & TV Shows',
          },
          {
            description: 'Premium Live TV Channels',
          },
          {
            description: 'TV Guide (EPG)',
          },
          {
            description: 'Support All Devices',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Pay Now',
          href: paymentLinks.sixMonths,
        },
      },
      {
        title: '1 Month',
        subtitle: 'Best selling - 50% Off',
        price: paymentLinks.monthPrice,
        period: 'one time payment',
        items: [
          {
            description: '15.000+ Live TV Channels',
          },
          {
            description: '50,000+ Movies & TV Shows',
          },
          {
            description: 'Premium Live TV Channels',
          },
          {
            description: 'TV Guide (EPG)',
          },
          {
            description: 'Support All Devices',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Pay Now',
          href: paymentLinks.monthly,
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Tiered Pricing Plans',
        description: 'Choose from a range of pricing plans designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Access',
        description: `Immediate access to your chosen plan's features and templates upon subscription.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Upgrade Value',
        description: 'Upgrade to higher-tier plans to unlock more features and benefits for an enhanced experience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24H support',
        description: 'Questions answered via live chat, email or phone, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to creativity"
    tagline="SIMPLIFIED PROCESS"
    isReversed={true}
    items={[
      {
        title: 'Subscribe to a plan',
        icon: 'tabler:number-1',
      },
      {
        title: 'Then Pay',
        icon: 'tabler:number-2',
      },
      {
        title: 'Enter your details (Email, phone number, etc.)',
        icon: 'tabler:number-3',
      },
      {
        title: "Don't forget to check you INBOX or Junk/Spam folder.",
        icon: 'tabler:number-4',
      },
      {
        title: 'You will receive your (Username, Password, etc.)',
        icon: 'tabler:number-5',
      },
      {
        title: 'Download And Install the app',
        icon: 'tabler:number-6',
      },
      {
        title: 'Enter details you received in your email and enjoy the service.',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
    classes={{
      items: {
        icon: 'text-white bg-purple-600 border-purple-600 dark:bg-purple-600 dark:border-purple-600',
      },
    }}
  />

  <!-- FAQs Widget ******************* -->

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Experience Unlimited Entertainment with IPTV Smarters Pro"
    subtitle="Unlock a world of entertainment with IPTV Smarters Pro. Stream your favorite channels, movies, and shows on any device, anytime, anywhere."
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: '/',
      },
    ]}
  />
</Layout>
