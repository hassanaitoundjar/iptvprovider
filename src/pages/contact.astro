---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact IPTV Smarters Pro - Get Support & Help 24/7',
  description:
    'Contact IPTV Smarters Pro for support, sales inquiries, or technical assistance. Available 24/7 via WhatsApp, email, or phone. Get help with IPTV setup, login issues, or subscription questions.',
  keywords: [
    'iptv support',
    'iptv help',
    'iptv customer service',
    'iptv contact',
    'iptv support team',
    'iptv technical support',
    'iptv help desk',
    'iptv customer care',
    'iptv support 24/7',
    'iptv contact us',
    'iptv support email',
    'iptv support phone',
    'iptv whatsapp support',
    'iptv live chat',
    'iptv support contact',
    'iptv help center',
    'iptv troubleshooting',
    'iptv setup help',
    'iptv login help',
    'iptv subscription help',
    'iptv billing support',
    'iptv account support',
    'iptv service support',
  ],
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    title: 'Contact IPTV Smarters Pro - 24/7 Customer Support',
    description:
      'Get in touch with IPTV Smarters Pro support team. Available 24/7 for assistance with your IPTV service.',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="For quicker answers, check our <a href='/blog' class='text-primary hover:underline font-semibold'>helpful guides</a> or <a href='/download' class='text-primary hover:underline font-semibold'>installation instructions</a>. You may find the solution you're looking for right there! If not, our support team is delighted to help you."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to account management, website navigation, payment issues, accessing purchased templates or general questions about the website's functionality.`,
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about purchases, subscription plans, or account upgrades. View our <a href="/pricing" class="text-primary hover:underline">pricing plans</a> or learn <a href="/about" class="text-primary hover:underline">more about our service</a>.',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues like app installation, login problems, buffering issues, or other technical challenges. Check our <a href="/blog" class="text-primary hover:underline">troubleshooting guides</a> for common solutions.',
      },
      {
        title: 'Phone (Whatsapp)',
        description: '+212628096812',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'contact@iptvsmarters.io',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Irem Ipum St, 145, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
